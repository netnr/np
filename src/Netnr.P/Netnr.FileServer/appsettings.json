{
  //连接字符串
  "ConnectionStrings": {
    "SQLite": "~/db/fs.db"
  },

  //安全
  "Safe": {
    //管理密码（设为空密码关闭管理接口）
    "AdminPassword": "nr",
    //启用临时上传（允许匿名任意上传到 TmpDir 目录）
    "EnableUploadTmp": true,
    //启用目录浏览（修改后须重启服务才生效）
    "EnableDirectoryBrowsing": true,

    //固定Token前缀
    "FixTokenPrefix": "FIX_",
    //Token有效期，不能小于Token缓存，单位：分
    "TokenExpired": 30,
    //Token缓存，不能大于Token有效期，单位：分
    "TokenCache": 20
  },

  //静态资源
  "StaticResource": {
    //上传文件大小，单位：MB
    "MaxSize": 20,

    //上传根目录，可用软链接分离
    "RootDir": "/static",
    //临时目录（分片上传临时存放、临时上传、不记录数据库）
    "TmpDir": "/static/tmp"
  }
}