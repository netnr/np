@{
    ViewData["Title"] = "角色管理";
}

@await Component.InvokeAsync("Form", new InvokeFormVM()
{
    TableName = "SysRole",
    ModalSize = 2
})

<style>
    .h300 {
        height: 300px !important;
    }
</style>

<!--模态 表单-->
<div class="modal fade modalautoheight" id="myModalAuth" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">
                    <i class="fa fa-cog orange"></i><span>权限控制</span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!--菜单配置-->
                    <div class="col-md-6 col-sm-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">菜单配置（勾选启用）</div>
                            <div class="panel-body modalscroll">
                                <ul id="navTree" style="        overflow: hidden"></ul>
                            </div>
                        </div>
                    </div>
                    <!--菜单功能按钮配置-->
                    <div class="col-md-6 col-sm-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">菜单功能按钮配置（勾选启用）</div>
                            <div class="panel-body modalscroll">
                                <ul id="btnTree"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveAuth" type="button" class="btn btn-primary"><span class="fa fa-save"></span>&nbsp;保存</button>
            </div>
        </div>
    </div>
</div>

<!--模态 表单-->
<div class="modal fade modalautoheight" id="myModalCAuth" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">
                    <i class="fa fa-copy orange"></i><span>复制权限</span>
                </h4>
            </div>
            <div class="modal-body">
                <label>请选择要复制的角色（单选）</label>
                <select class="form-control h300 modalscroll" id="seRole" multiple></select>
            </div>
            <div class="modal-footer">
                <button id="btnSaveCAuth" type="button" class="btn btn-primary"><span class="fa fa-save"></span>&nbsp;保存</button>
            </div>
        </div>
    </div>
</div>

<partial name="_BaseViewPartial" />